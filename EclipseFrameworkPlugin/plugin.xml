<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="analysis" name="Static Analysis Plugin" schema="schema/de.fraunhofer.sit.codescan.analysis.exsd"/>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.fraunhofer.sit.codescan.androidssl.commands.scanAllProjects"
            name="Scan all projects">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.fraunhofer.sit.codescan.framework.internal.handlers.AnalyzeAllProjectsButtonClickHandler"
            commandId="de.fraunhofer.sit.codescan.androidssl.commands.scanAllProjects">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Scan"
               mnemonic="M">
            <command
                  commandId="de.fraunhofer.sit.codescan.androidssl.commands.scanAllProjects"
                  label="Scan all projects"
                  mnemonic="S"
                  tooltip="Scan all Android projects for SSL vulnerabilities">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.fraunhofer.sit.codescan.androidssl.toolbars.scanToolbar">
            <command
                  commandId="de.fraunhofer.sit.codescan.androidssl.commands.scanAllProjects"
                  label="Scan all projects"
                  tooltip="Scan all Android projects for SSL vulnerabilities">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="de.fraunhofer.sit.codescan.androidssl.findingmarker"
         name="Vulnerability Finding"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.fraunhofer.sit.codescan.framework.internal.handlers.StartupHandler">
      </startup>
   </extension>

</plugin>
